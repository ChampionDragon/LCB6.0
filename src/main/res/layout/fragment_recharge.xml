<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_background"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_recharge_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|start"
        android:text="请输入充值金额（单位：元）"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_recharge_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_gray_stroke"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="16sp">

        <requestFocus/>
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recharge_1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/window_bg"
            android:gravity="center"
            android:text="30"
            android:textColor="@drawable/charge_tvcolor"/>

        <TextView
            android:id="@+id/tv_recharge_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/window_bg"
            android:gravity="center"
            android:text="50"
            android:textColor="@drawable/selector_recharge_quickinput_bg"/>

        <TextView
            android:id="@+id/tv_recharge_3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/window_bg"
            android:gravity="center"
            android:text="100"
            android:textColor="@drawable/charge_tvcolor"/>

        <TextView
            android:id="@+id/tv_recharge_4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/window_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="200"
            android:textColor="@drawable/charge_tvcolor"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recharge_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:textColor="@color/text_green"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/bt_recharge_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="去支付"
        android:textColor="@color/white"/>

</LinearLayout>