<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--++++++++++++  gridPasswordView的自定义属性 ++++++++++++++-->
    <declare-styleable name="gridPasswordView">
        <attr name="gpvTextColor" format="color|reference" />
        <attr name="gpvTextSize" format="dimension" />
        <attr name="gpvLineColor" format="color" />文字框边界颜色
        <attr name="gpvGridColor" format="color" />文字框内部颜色
        <attr name="gpvLineWidth" format="dimension" />文字框边界长度
        <attr name="gpvPasswordLength" format="integer" />设定文字框几个
        <attr name="gpvPasswordTransformation" format="string" />密码覆盖的文字
        <attr name="borderActiveColor" format="color" />边境活动
        <attr name="gpvPasswordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>
    </declare-styleable>
    <!-- +++++++++++++++++++++++ XKeyboardView自定义键盘属性 +++++++++++++++++++++++ -->
    <declare-styleable name="XKeyboardView">
        <!-- 删除按键的图标 -->
        <attr name="deleteDrawable" format="reference" />
        <!-- 删除按键图标的颜色 -->
        <attr name="deleteColor" format="color|reference" />
        <attr name="deleteBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="RefreshRecyclerView">
        <attr name="refresh_enable" format="boolean" />
        <!-- 其中之一为 true，都能使用 加载更多 和 显示没有更多数据 功能 -->
        <attr name="load_more_enable" format="boolean" />
        <attr name="show_no_more_enable" format="boolean" />
    </declare-styleable>


    <!-- +++++++++++++++++++++++ 自定义控件Tablelayout +++++++++++++++++++++++ -->
    <declare-styleable name="TableLayout">
        <attr name="tableMode" format="enum">
            <enum name="auto" value="0" />
            <enum name="equallyDivide" value="1" />
        </attr>
        <attr name="tableRowHeight" format="dimension" />
        <attr name="tableDividerSize" format="dimension" />
        <attr name="tableDividerColor" format="color" />
        <attr name="tableColumnPadding" format="dimension" />
        <attr name="tableTextGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="leftCenter" value="1" />
            <enum name="rightCenter" value="2" />
        </attr>
        <attr name="tableTextSize" format="dimension" />
        <attr name="tableTextColor" format="color" />
        <attr name="tableTextColorSelected" format="color" />
        <attr name="backgroundColorSelected" format="color" />
    </declare-styleable>

    <!-- +++++++++++++++++++++++ 自定义表格控件 +++++++++++++++++++++++ -->
    <declare-styleable name="TableView">
        <attr name="unitColumnWidth" format="dimension" />
        <attr name="rowHeight" format="dimension" />
        <attr name="headerColor" format="color" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="headerTextSize" format="dimension" />
        <attr name="headerTextColor" format="color" />
    </declare-styleable>


</resources>